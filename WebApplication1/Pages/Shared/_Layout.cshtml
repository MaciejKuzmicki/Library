<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/headers.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="p-3 text-bg-dark" style="background-color:#1F1F1F">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                
                      
             <img src="https://res.cloudinary.com/dxmsosoui/image/upload/v1697701151/uadmlbqshstksjtlks6v.png" style="border-radius:20px"alt="Bootstrap" width="50" height="50">
                

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-secondary">Library</a></li>
                    <li><a href="/Books/ShowBooks" class="nav-link px-2 text-white">Books</a></li>
                    <li><a href="/Authors/SeeAuthors" class="nav-link px-2 text-white">Authors</a></li>
                    <li><a href="/Privacy" class="nav-link px-2 text-white">Privacy</a></li>
                    
                </ul>
                
                
                @if (Context.Session.GetString("role") == null)
                {
                    <div class="text-end">
                        <a type="button" asp-page="/Users/Login" class="btn btn-outline-light me-2">Login</a>
                        <a type="button" asp-page="/Users/Register" class="btn btn-warning">Sign-up</a>
                    </div>
                }
                else if(Context.Session.GetString("role") == "admin")
                {
                    <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        More
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/Categories/AddCategory">Add Category</a></li>
                        <li><a class="dropdown-item" asp-page="/Categories/ListCategories">Show Categories</a></li>
                        <li><a class="dropdown-item" asp-page="/Authors/AddAuthor">Add Author</a></li>
                        <li><a class="dropdown-item" asp-page="/Books/AddBook">Add Book</a></li>


                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-page="/Users/Logout">Logout</a></li>
                    </ul>
                }
                else if(Context.Session.GetString("role") == "client")
                {
                    <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        More
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="/BookLoans/List">My Book Loans</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-page="/Users/Logout">Logout</a></li>
                    </ul>
                }
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="flex:1">
            @RenderBody()
        </main>
    </div>
    <footer class="d-flex flex-wrap justify-content-between py-4 my-3 align-items-center border-top" style="">
        <div class="container py-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between ">
                <div class="d-flex align-items-center">
                    <p class="mb-0">&copy; 2023 Library, Inc. All rights reserved.</p>
                </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3">
                <a class="text-body-secondary" href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
